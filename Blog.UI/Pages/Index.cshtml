@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<header class="main">
    <div class="flex-container text-center">
        <div class="mainHeaderText">
            <p class="welcomeHeader"
               style="font-family: 'dynapuff-variablefont_wdth,wght', sans-serif;
                        font-weight:bold; 
                        font-size : 3vw;">
                Hello World !
            </p>
            <p class="welcomeHeader">
                Jump into 3 unique collections of recipes, stunning photos, and creative DIYs!
            </p>
        </div>
    </div>
</header>

<body class="mb-5">
    <div class="container d-flex justify-content-evenly mainBody">
        <a class="navbar-brand d-flex justify-content-center" asp-area="" asp-page="/Recipies"><img class="navIcon" src="icons/chef-hat.png" alt="RecipeIcon"></a>
        <a class="navbar-brand d-flex justify-content-center" asp-area="" asp-page="/Photografy"><img class="navIcon" src="icons/camera.png" alt="PhotografyIcon"></a>
        <a class="navbar-brand d-flex justify-content-center" asp-area="" asp-page="/DoItYourself"><img class="navIcon" src="icons/diy.png" alt="DiyIcon"></a>
    </div>
    <div class="newsDiv d-flex flex-column">
        <p class="newsTitle">NEWS !</p>
        <div class="newsPost d-flex">
            <img class="newsImg d-flex align-content-center" src="images/launchimg.jpg" />
            <div class="d-flex flex-column" style="width: 80vw;">
                <p class="newsPostTitle">We’re LIVE! Welcome reader <span class="badge">New</span></p>
                @* <a class="navbar-brand btn newsBtn text-center" asp-area="" asp-page="/Recipies">Explore !</a> *@
                <p class="newsText">
                    <strong>Exciting News:</strong>
                    <br /> 
                    We’re excited to announce the official launch of this brand-new website!

                    Explore a curated collection of delicious recipes, creative DIY projects, and inspiring photography — all in one , easy-to-navigate space.

                    Whether you're here to cook, create, or be inspired, there's something for everyone.
                </p>
                
            </div>
        </div>
    </div>
</body>

