@page
@model Blog.UI.Pages.PhotografyModel
@{
}


<div class="d-flex flex-row">
    <div class="filterMenu border-end">
        <div class="d-flex flex-row border-bottom">
            <img class="filterMenuIcon" src="icons/filter.png" />
            <p class="filterTitle">Filter</p>
        </div>
        <div class="tagsList border-bottom pb-4">
            <p class="tagsTitle">Categories</p>
            <button class="btn active w-100 mb-5" onclick="showAllRecipes()">Show All</button>
            @if (Model.Photos is null || !Model.Photos.Any())
            {
                <div class="apologyText p-3">
                    <strong>Apology!</strong>
                    <br />
                    No photos was found
                    <br />
                    Please come back later
                </div>
            }
            else
            {
                <!-- Category Buttons -->
                @foreach (var category in Model.Categories)
                {
                    <button class="btn tagBtn" onclick="updateCategory('@category')">@category</button>
                }
            }
        </div>
    </div>
    <!-- Photo List -->
    <div id="photoList" class="photoList">
        <div class="d-flex justify-content-center flex-wrap">
            @foreach (var photo in Model.Photos)
            {
                <div class="card" data-categories="@string.Join(",", photo.Category)">
                    <img id="photoModalImg" class="card-img-top" src="@photo.URL" alt="Card image cap">
                    <div class="card-body p-0">
                        <button class="btn modalBtn"
                                data-bs-toggle="modal"
                                data-bs-target="#photoModal"
                                onclick="loadPhoto('@photo.Id')">
                            <p class="card-title">@photo.Title</p>
                        </button>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="flip-card photoList">
        <div class="flip-card-inner">
            @foreach (var photo in Model.Photos)
            {
                <div class="flip-card-front">
                    <img src="~/images/file-not-found.jpg" alt="Photo" style="width:300px;height:300px;">
                </div>
                <div class="flip-card-back">
                    <p class="card-title">@photo.Title</p>
                    <p class="card-text" style="color: white;">@photo.DateTaken.ToString("dd/MM/yyyy")</p>
                    <p class="card-text" style="color: white;">@photo.Description</p>
                </div>
            }
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="photoModal" tabindex="-1" aria-labelledby="photoModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <img id="photoModalImg" src="placeholder.jpg" alt="Photo" />
                <p class="modal-text" id="photoDescription"></p>
            </div>
        </div>
    </div>
</div>

<script>
    async function loadPhoto(photoId) {
        try {
            const response = await fetch(`?handler=Photo&id=${photoId}`);
            if (!response.ok) throw new Error("Failed to load photo");

            const photo = await response.json();

            document.getElementById("photoDescription").textContent = photo.description;
            document.getElementById("photoModalImg").src = photo.url ?? "images/fallback.jpg";


        } catch (err) {
            console.error(err);
            alert("Could not load photo data.");
        }
    }
    function updateCategory(category) {
        // Update the UI
        // document.getElementById('selectedCategory').innerText = 'Selected: ' + category;

        // Get all photo cards
        const cards = document.querySelectorAll('#photoList .card');

        cards.forEach(card => {
            const categories = card.dataset.categories.split(',');
            // Show only cards that contain the selected category
            if (categories.includes(category)) {
                card.style.display = 'block';
            } else {
                card.style.display = 'none';
            }
        });
    }
    function showAllPhotos() {
        // Reset category display text
        // document.getElementById('selectedCategory').innerText = 'Showing: All Photos';

        // Show all photo cards
        const cards = document.querySelectorAll('#photoList .card');
        cards.forEach(card => {
            card.style.display = 'block';
        });
    }
</script>